<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/lblNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgImagen"
        android:layout_toRightOf="@+id/imgImagen"
        android:text="TextView"
        android:textColor="#3399cc"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/lblTipoBloqueo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblNombre"
        android:layout_below="@+id/lblNombre"
        android:layout_marginLeft="26dp"
        android:text="TextView" />

    <ImageView
        android:id="@+id/imgImagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>
